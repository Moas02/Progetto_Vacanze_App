<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorPrimaryVariant"
    tools:context=".Schermata_Iniziale">


    <TextView
        android:id="@+id/Presentazione"
        android:layout_width="406dp"
        android:layout_height="118dp"
        android:text="Sei in grado di vincere il milione?
        SCOPRIAMOLO"
        android:textColor="@color/black"
        android:textSize="15pt"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp" />

    <ImageView
        android:id="@+id/Piramide"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/piramideapp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/Iniziamo"
        android:layout_width="222dp"
        android:layout_height="55dp"
        android:text="INIZIAMO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Presentazione"
        app:layout_constraintVertical_bias="0.751"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/classifica"
        android:layout_width="220dp"
        android:layout_height="51dp"
        android:text="STORICO"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/Presentazione"
        app:layout_constraintVertical_bias="0.92"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/altro"
        android:layout_width="48dp"
        android:layout_height="38dp"
        app:backgroundTint="@color/design_default_color_on_primary"
        app:icon="@drawable/ingranaggio"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="@+id/Piramide"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.976" />


</androidx.constraintlayout.widget.ConstraintLayout>